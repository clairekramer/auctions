@{
    ViewData["Title"] = "Register and Login";
}


@model auctions.Models.User

<p>@ViewBag.errors</p>

<div class="row">
    <div class="five columns">
        <h1>Register</h1>
        <form asp-action="Register" asp-controller="User" method="Post">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName"></label><input asp-for="FirstName"><br>
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName"></label><input asp-for="LastName"><br>
            <span asp-validation-for="Username"></span>
            <label asp-for="Username"></label><input asp-for="Username"><br>
            <span asp-validation-for="Password"></span>
            <label asp-for="Password"></label><input asp-for="Password"><br>
            <span asp-validation-for="ConfirmPW"></span>
            <label asp-for="ConfirmPW"></label><input asp-for="ConfirmPW"><br>
            <input type="submit" value="Register">
        </form>
    </div>

    <div class="five columns">
        <h1>Login</h1>
        <form action="Login" method="Post">
            <label for="Username">Username:</label><input type="text" name="Username">
            <label for="Password">Password:</label><input type="text" name="Password"><br>
            <input type="submit" value="Login">
        </form>
    </div>
</div>